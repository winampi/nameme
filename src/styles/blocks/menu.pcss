.menu {
    &--color-white {
      color: #fff;
    }
  }
  
  .menu__list {
    display: flex;
    justify-content: center;
  }
  
  .menu__item {
    white-space: nowrap;
    margin-right: 8%;

    &:hover {
      color:$links-color;
    }
  
    &:last-child {
      margin-right: 0;
    }
  }
  
  .menu__link {
    text-decoration: none;
    white-space: nowrap;
  }